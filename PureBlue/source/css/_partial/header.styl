.header{
	@media screen and (max-width:1024px){
					width: 1030px;
				}
	@media screen and (max-width:970px){
					width: 970px;
				}
	display: flex;
	display:-webkit-flex;
	align-items:center;
	-webkit-align-items:center;
	justify-content:center ;			
	position: relative;
	height: 320px;
	background: -webkit-linear-gradient(left, #2874B2 0%, #29c6cd 100%);
	font-family: "Source Sans Pro";
	.blog-title .logo{
		text-decoration: none;
		color: white;
		font-size: 2.8em;
	}
	.menu{
		margin-top: 40px;
		margin-left: 50px;
		.menu-item{
			display: inline-block;
			margin: 7px;
			padding: 2px 10px 2px 10px;
			.menu-item-link{
				text-decoration: none;
				color: white;
				font-size: 22px;
				position: relative;
				&:after{
					content: ""
					width: 0;
					height: 2px; 
					position: absolute;
					background-color: white;
					top: 100%;
					left: 50%;
					transition: all .6s ; 
				}
			}
			&:hover .menu-item-link:after{
				left: 0%;
				width: 100%;
			}
		}
	}
	span{
		position: absolute;
		top:20px;
		left: 100px;
		a{
			text-decoration: none;
			color: white;
			font-size: 20px;
		}
		.point{
			display: inline-block;
			width: 13px;
			height: 13px;
			margin-right: 8px;
			background-color: white;
			clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
			-webkit-clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
		}
	}
}