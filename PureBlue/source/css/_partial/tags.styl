.tags-main-container{
	margin-top: 120px;
	padding-left: 40px;
	width: 100%;
	.tags-counter{
		text-align: center;
		span{
			font-size: 50px;
		}
	}
	.tags-tagscloud{
		min-height: 20rem;
		a{
			display: inline-block;
			color: #acb3c2;
			text-decoration: none;
			margin: .2rem 1.4rem .8rem .2rem;
			line-height: 1.2;
			-webkit-transition: .2s ease-in-out;
			transition: .2s ease-in-out;
			&:hover{
				opacity: 0.6;
				border-bottom: 1.5px solid #acb3c2;
				transform: translate(10px, 0);
			}
		}
	}
}
.tag-page-container{
	.tag-page-title{
		cursor:pointer;
		display: inline-block;
		position: relative;
		margin-bottom: 60px;
		left: 2px;
		top: 4px;
		background-color: $color;
		color: white;
		font-family: "Sourece Sans pro";
		font-weight: normal;
		font-size: 26px;
		padding-left: 15px;
		padding-right: 20px;
	}
	.tag-page-title:before{
			content: '';
     		position: absolute;
   			top: -1px;
    		right: -20px;
     		height: 0;
     		width: 0;
     		border-top: 20px solid transparent;
     		border-left: 20px solid $color;
     		border-bottom: 20px solid transparent;
		}	
}




