body{
	background-color: white;
	font-size: 1.25rem;
	line-height: 1.5;
	margin: 0;
	padding: 0;
	height: 100%;
	font-family: "Lato";
	@media screen and (max-width:1024px){
					width: 1030px;
				}
	@media screen and (max-width:970px){
					width: 970px;
				}					 
}
.main{
	max-width: 960px;
	margin: 0 auto;
	height: 100%;
	@media screen and (max-width:1024px){
					max-width: 1030px;
					width: 1030px;
				}
	@media screen and (max-width:970px){
					max-width: 970px;
					width: 970px;
				}
	img{
		cursor:url('image/cross.cur'),auto;
	}				
}
if(hexo-config('color.PureBlue')){
	$color = #53B3FA;
}
else if(hexo-config('color.DeepBlue')){
	$color = #2874B2;
}
else if(hexo-config('color.LightBlue')){
	$color = #6A93B0;
}
else if(hexo-config('color.DarkBlue')){
	$color = #4D668E;
}
else if(hexo-config('color.Gradient')){
	$color = -webkit-linear-gradient(left, #2874B2 0%, #29c6cd 100%);
}
::selection{
	background-color: $color;
	color: white;
}



