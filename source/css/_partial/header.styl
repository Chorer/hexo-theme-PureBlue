.header{			
	height: 500px;
	font-family:Lato;
	background: url(https://i.loli.net/2019/07/12/5d288d4b4a6a412359.jpg)  -266px -172px;
	font-weight:bold;
	display:flex;
	flex-direction:column;
	margin-bottom: -100px;
	.header_top{
		display: flex;
    justify-content: space-between;
    box-shadow:0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
    position: relative;
		height:40px;
		padding: 12px 150px;
		z-index:20;
		transition: background .5s ease-in-out,padding .5s ease-in-out;
		.theme{
			a{
				text-decoration: none;
				color: white;
				font-size: 24px;
			}
			a:hover{
				opacity:0.8;
			}
			.fa-bars{
				color: white;
				padding-right: 3px;
			}
		}
		.navbar{
			.menu{
				margin:0;
				.fa-search{
					vertical-align:text-bottom;
					color: white;
					&:hover{
						cursor:pointer;
						color:$color;
					}
				}
				.menu-item{
					display: inline-block;
					padding: 0 8px;
					&:before{
						content:"<i class="fa fa-home"></i>";
					}
					.fa{
						color:white;
						font-size:0px;
					}
					.fa-home{
						font-size:0px;
					}
					.menu-item-link{
						text-decoration: none;
						color: white;
						font-size: 15px;
						font-weight:normal;
						position: relative;
						&:after{
							content: ""
							width: 0;
							height: 3px; 
							position: absolute;
							background-color: $color;
							top: 100%;
							left: 50%;
							transition: all .6s ; 
						}
					}
					&:hover .menu-item-link:after{
						left: 0%;
						width: 100%;
					}
					.menu-item-link2{
						text-decoration: none;
						color: white;
						font-size: 15px;
						position: relative;
						&:after{
							content: ""
							width: 100%;
							height: 3px; 
							position: absolute;
							left: 0%;
							background-color: $color;
							top: 100%; 
						}
					}
				}
			}
		}
	}
	.header_top_fixed{
		position: fixed;
		top: 0;
		left:0;
		right:0;
		bottom:0;
		padding: 5px 150px;
		background-color:hsla(0,0%,100%,.8);
		a{
			color:#34495e!important;
		}
		.fa{
			color:#53b3fa!important;
		}
	}
	.header_bottom{
		flex-grow:1;
	    display: flex;
	    align-items: center;
	    justify-content: center;
		.blog-title{
		  margin-top: -80px;
			text-align:center;
			position:relative;
			.logo{
				text-decoration: none;
				color: white;
				font-size: 36px;
				cursor:pointer;
				padding: 11px 30px;
				background-color:black;
			}
			.descrs{
				margin-top:10px;
				.descr{
					color: white;
					font-weight:normal;
					font-size:18px;
				}
			}
		}
		.blog-down{
			position:absolute;
			left:50%;
			top:120%;
			margin-left:-13px;
			animation: hovertreemove 1.5s infinite ease-in-out;
			@keyframes hovertreemove {
			  0% {
					opacity: 0.1;
			    transform: translate3d(0,20px,0);
				}
				50% {
					opacity: 1;
			    transform: translate3d(0,12px,0);
				}
				100% {
					opacity: 0.1;
			    transform: translate3d(0,20px,0);
				}
			}
			a{
				color:white;
				transition: all ease-in-out;
				&:hover{
					color:#53b3fa;
				}
			}
		}
	}
}