.post_except{
	margin: 3em auto!important;
	padding:20px!important;
	box-shadow: 0 0 1em 0.5em rgba(0,0,0,.19);
	.post-title{
		font-weight:500!important;
		position:relative;
		display:inline-block;
		.post-title-link{
			&:hover{
				color:$color;
			}
			&:hover::before{
				visibility: visible;
				transform: scaleX(1);
			}
			&:before{
				content: "";
			    position: absolute;
			    width: 100%;
			    height: 2px;
			    bottom: 8px;
			    background-color: $color;
			    visibility: hidden;
			    transform: scaleX(0);
			    transition: .2s ease-in-out;
			}
			&:after{
				content: "";
			    position: absolute;
			    left: -20px;
			    top: 0px;
			    bottom: 0;
			    width: 4px;
			    height:70px;
			    background-color: #00c4b6;
			}
		}
	}
	.post-content{
		p{
			margin:0;
		}
	}
	.post-sub_container{
		display:flex;
		justify-content:space-between;
		border-top:1px dashed #99a9bf;
		padding-top:10px;
		.post-tags{
			.fa-tags{
				color:#99a9bf;
				font-size:20px;
				vertical-align:middle;
			}
			a{	
				text-decoration: none;
				color:white;
				font-size:14px;
				background: #c6cbe9;
			    padding: 6px 12px;
			    border-radius: 5px;
			    transition: .3s;
				&:hover{
					background: #05d3f9;
				}
			}
		}
		.more-btn{
			display: inline-block;
			align-self:center;
			padding:7px 7px 7px 12px;
			background-color: $color;
			border-radius: 2px;
			border:none;
			outline:0;
			transition: all 0.5s;
			&:hover{
				background-color:#f47466;
			}
			a{
				color: white;
				font-size:15px;
				font-family:Lato;
				font-weight:bold;
				text-decoration: none;	
				position: relative;
				padding-right: 18px;
                transition: 0.5s;
				&:after{
				  content: 'Â»';
			      position: absolute;
			      right: 4px;
			      top: -4px;
			      transition: 0.5s;
			      font-size:20px;
				}		
			}
		}
	}
}
#back-to-top{
	z-index:99;
	&:hover{
		background-color: #f47466; 
	}
}
