.post_except{
	margin: 3em auto!important;
	padding:10px 0 0 0;
	box-shadow: 0 0 1em 0.5em rgba(0,0,0,.19);
	width:75%;
	display:flex;
	flex-direction:column;
	align-items:center;
	&:after{
		content: "";
    position: absolute;
    left: 0;
    top: 18px;
    bottom: 0;
    width: 4px;
    height:70px;
    background-color: #00c4b6;
	}
	.post-title{
		font-weight:500!important;
		position:relative;
		display:inline-block;
		padding-left:12px;
		padding-right:12px;
		.post-title-link{
			&:hover{
				color:$color;
			}
			&:hover::before{
				visibility: visible;
				transform: scaleX(1);
			}
			&:before{
					content: "";
			    position: absolute;
			    width: 100%;
			    height: 2px;
			    bottom: 8px;
			    left: 2px;
			    background-color: $color;
			    visibility: hidden;
			    transform: scaleX(0);
			    transition: .2s ease-in-out;
			}
		}
	}
	.post-content{
		border:none;
		border-bottom-left-radius:4px;
		border-bottom-right-radius:4px;
		padding: 0 15px;
		min-height:120px;
		overflow:hidden;
		p{
			margin:0;
			position:relative;
			&::after{
				content:'';
				display:none;
				position:absolute;
				width:100%;
				height:100%;
				border-bottom-left-radius: 4px;
				border-bottom-right-radius: 4px;
				bottom:0;
			}
			img{
				position:relative;
				border-bottom-left-radius: 4px;
				border-bottom-right-radius: 4px;
			}
		}
		.default{
			display:none;
			padding:30px 10px;
			font-size:18px;
			font-style:italic;
			margin-left:0;
			width: 95%;
			border-left: 5px solid #f47466;
			background-color: #f5f5f5;
		}
		&:hover img{
			transform:scale(1.1)
		}
		&:hover p::after{
			display: block;
	    background-color: rgba(83, 179, 250,.2);
	    z-index: 1;
		}
	}
	.post-content-padding{
		padding: 0;
	}
	.post-content-quote{
		width:95%;
	}
	.post-content-noimg{
		min-height:120px;
		display:flex;
		justify-content:center;
		flex-direction:column;
		width:90%;
	}
	.post-sub_container{
		padding:10px;
		width:100%;
		.post-tags{
			float:left;
			padding-left:12px;
			.fa-tags{
				color:#99a9bf;
				font-size:20px;
				vertical-align:middle;
			}
			a{	
				text-decoration: none;
				color:white;
				font-size:14px;
				background: #c6cbe9;
			    padding: 6px 12px;
			    border-radius: 5px;
			    transition: .3s;
				&:hover{
					background: #05d3f9;
				}
			}
		}
		.more-btn{
			width:106px;
			margin: 0 auto;
			padding: 1px 10px;
			background-color: $color;
			border-radius: 2px;
			border:none;
			outline:0;
			transition: all 0.5s;
			&:hover{
				background-color:#f47466;
			}
			a{
				color: white;
				font-size:17px;
				font-family:Lato;
				font-weight:bold;
				text-decoration: none;	
				position: relative;
				padding-right: 18px;
                transition: 0.5s;
				&:after{
				  content: 'Â»';
			      position: absolute;
			      right: 4px;
			      top: -10px;
			      transition: 0.5s;
			      font-size:20px;
				}		
			}
		}
	}
}
#back-to-top{
	z-index:99;
	&:hover{
		background-color: #f47466; 
	}
}
