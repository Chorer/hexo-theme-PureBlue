.post_except{
	margin: 3em auto!important;
	padding:20px!important;
	box-shadow: 0 0 1em 0.5em rgba(0,0,0,.19);
	.post-title{
		font-weight:500!important;
		position:relative;
		display:inline-block;
		.post-title-link{
			&:hover{
				color:$color;
			}
			&:hover::before{
				visibility: visible;
				transform: scaleX(1);
			}
			&:before{
				content: "";
			    position: absolute;
			    width: 100%;
			    height: 2px;
			    bottom: 8px;
			    background-color: #53b3fa;
			    visibility: hidden;
			    transform: scaleX(0);
			    transition: .2s ease-in-out;
			}
			&:after{
				content: "";
			    position: absolute;
			    left: -20px;
			    top: 16px;
			    bottom: 0;
			    width: 4px;
			    height:35px;
			    background-color: #00c4b6;
			}
		}
	}
	.post-content{
		p{
			margin:0;
		}
	}
}
#back-to-top{
	z-index:99;
	&:hover{
		background-color: #f47466; 
	}
}
