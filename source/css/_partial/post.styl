.posts{		
	.post_full{
		position: relative;
		width: 750px;
		margin: 3em 0;
		padding: 20px 40px;
		border-radius: 4px;
		font-size: 15px;
		transition: box-shadow 1s;
		background-color: white;
	}
	.post_full .post-title{	
		font-size: 22px;
		font-weight:600;
		padding-top: 15px;
		padding-bottom: 4px;
		margin:0;
		.post-title-link{
			color: #34495e;
			text-decoration: none;
			transition: color 0.2s;
		}
	}
	.post_full .post-sub_title{
		font-size: 1.1em;
		color: #99a9bf;
	}
	.post_full .post-info{
		color: #99a9bf;
		font-size: 15px;
		padding-top:3px;
		padding-bottom:12px;
		.post-tags{
			a{	
				text-decoration: none;
				color:white;
				background: #c6cbe9;
			    padding: 1.4px 6px;
			    border-radius: 4px;
			    transition: .3s;
				&:hover{
					background-color:#05d3f9;
				}
			}
		}
		& div{
			display:inline-block;
		}
	}
	.post_full .post-content{
		border-top:1px dashed #99a9bf;
		padding:12px 0;	
		min-height: 20px;	
		a{
			color: #368CCB;
			text-decoration: none;
		}
		h1,h2,h3,h4,h5,h6{
			font-weight:500;
			&:before{
				content:"#";
				color:#eb5055;
				font-weight:600;
				font-family:apple-system;
				padding-right:4px;
			}
		}
		h1{
			font-size:28px;		
			border-bottom:1px solid #eee;			
		}
		h2{
			font-size:26px;
			border-bottom:1px solid #eee;
		}
		h3{
			font-size:24px;
			border-bottom:1px solid #eee;
		}
		h4{
			font-size:22px;
		}
		h5{
			font-size:20px;
		}
		h6{
			font-size:18px;
		}
		hr{
			border: 2px dashed #53b3fa;
    		margin: 40px 0 40px 0;
		}
		blockquote{
			padding: 2px 10px;
			margin-left:0;
			width: 95%;
			border-left: 5px solid #f47466;
			background-color: #f5f5f5;
			list-style: none;
			word-break: break-all;
			ul{
				padding-left:20px;
			}
		}
		table{
			width: 100%;
			border-collapse: collapse;
			th{
				border: 1px solid #E6E6E6;
				font-weight: bold;
				padding: 10px;
				background-color: #F3F3F3;
			}
			td{
				border: 1px solid #E6E6E6;
				padding: 10px;
			}	
		}	
		.topBar{
			height: 45px;
			background-color: rgb(21, 23, 24);
			box-shadow: 0 0 1em 0.5em rgba(0,0,0,0.19);
			margin-left:0;
			position: relative;
			border-top-left-radius:5px;
			border-top-right-radius:5px;
			.dot{
				position: absolute;
			    left: 14px;
			    top: 11px;
			}
			.copy{
				position: absolute;
				right: 12px;
				top: 11px;
				button{
					background-color: rgb(21, 23, 24);
					border: none;
					outline:none;
					cursor: pointer;
				}
			}
		}
		pre{
			box-shadow: 0 0 1em 0.5em rgba(0,0,0,0.19);
			background-color:rgb(21, 23, 24);
			max-width: 650px;
			overflow-x:auto;
			padding: 0px 20px 20px 61px;
			margin-top:0;
			border-radius:0;
			border-bottom-left-radius:5px;
			border-bottom-right-radius:5px;
			code{
				font-family: "Lucida console"!important;
				font-size: 14px;
			}
		}
		.littleCode{
			color: #ff502c;
			font-size: 0.9em;
			font-family: Menlo;
			vertical-align: middle;
			background-color: #fff5f5;
			padding:.065em .4em;
		}	
	}
	.post-nav{
		margin: 25px 0;
		width:100%;
		position:relative;
		a{
			font-size:16px;
			color:#99a9bf;
			display:inline-block;
			transition: .4s;
			&:hover{
				color:#f47466;
				text-decoration:none;
			}
		}
		.post-nav-prev{
			float:left;
			a:hover{
				transform:translate(-8px,0);
			}
			.fa-chevron-left{
				margin-right:4px;
			}
		}
		.post-nav-next{
			float:right;
			a:hover{
				transform:translate(8px,0);
			}
			.fa-chevron-right{
				margin-left:4px;
			}
		}
		.clear{
			clear:both;
		}
		&:before{
			content:"";
			width:100%;
			border: 1px solid #f0f0f0;
			position:absolute;
			top:-10px;
		}
	}		
		img{
			max-width: 600px;
			display: block;
		}	
		.sub-container{
			display:flex;
			justify-content:space-between;
			border-top:1px dashed #99a9bf;
			padding-top:10px;
			.post-tags{
				.fa-tags{
					color:#99a9bf;
					font-size:20px;
					vertical-align:middle;
				}
				a{	
					text-decoration: none;
					color:white;
					font-size:14px;
					background: #c6cbe9;
				    padding: 6px 12px;
				    border-radius: 15px;
				    transition: .3s;
					&:hover{
						background: #05d3f9;
						opacity:0.5;
					}
				}
			}
		}
		.more-btn{
			display: inline-block;
			align-self:center;
			padding:7px 7px 7px 12px;
			background-color: $color;
			border-radius: 2px;
			border:none;
			outline:0;
			transition: all 0.5s;
			&:hover{
				background-color:#f47466;
			}
			a{
				color: white;
				font-size:15px;
				font-family:Lato;
				font-weight:bold;
				text-decoration: none;	
				position: relative;
				padding-right: 18px;
                transition: 0.5s;
				&:after{
				  content: 'Â»';
			      position: absolute;
			      right: 4px;
			      top: -4px;
			      transition: 0.5s;
			      font-size:20px;
				}		
			}
		}
}
.post-toc{
	@media screen and (max-width:970px){
					display: none;
				}
	position: absolute;
	right: 110px;
	top: 430px;			
	.fa-th-large,.fa-angle-double-up{
		margin-right: 5px;
		vertical-align:baseline;
	}
	.toc-top{
		margin-bottom: 10px;
		border-bottom: 3px dashed #53b3fa;
		color: #53b3fa;
		text-align: center;
		font-size: 18px;
		font-weight: bold;
	}
	.toc{
		display: inline-block;
		width: 250px;
		max-height:420px;
		overflow-y: auto;
		margin:0;
		padding: 0;
		&::-webkit-scrollbar-thumb{
			background-color:#00c4b6;
		}
		li{
			list-style: none;
			line-height: 18px;
		}
		.toc-item{
			padding-left:10px;
			margin-top:3px;
		}
		.toc-level-2>a:first-child{
			font-weight:bold;
		}
		.toc-child{
			padding-left: 10px;
		}
		a{
			color: #34495e;
			font-size: 14px;
			display:block;
			text-decoration:none;
			padding: 3px;
			padding-left:5px;
			&:hover{
				color: $color;
			}
		}
	}	
}
.actived{
	background-color: #00c4b6;
	color: white!important;
	border-left: 4px solid #009d92;
	transition:all .2s ease-in-out;
}
#vcomments{
	width: 825px;
	margin-left: 0;
	margin-top: 40px;
	font-family: "Source Sans pro";
	.vwrap{
		background-color:white;
		border-radius:8px;
		padding:6px 15px 15px 15px;
		.vheader{
			input{
				font-size: .9em;
				padding-top:6px;
			}
		}		
		.vedit{
			#veditor{
				font-size: 1em;
				min-height:2.75rem;
			}
			.vctrl{
				font-size:13px;
			}
		}
		.vcontrol{
			button{
				padding:0.4rem 1.4rem;
				&:hover{
					background: $color;
					border: 1px solid $color; 
					color: white;
				}
			}
		}
	}
	.vlist{
		.vcard{
			padding:6px;
		}
	}
}
.toast{
	position: fixed;
    bottom: 40px;
    font-size: .8125rem;
    font-family: Roboto;
    letter-spacing: -0.5px;
    left: 43%;
    color: white;
    background-color: black;
    border-radius: 23px;
    padding: 6px 14px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12), 0 1px 5px 0 rgba(0,0,0,.2);
    transition: all .3s ease;
}
.ab{
	position:absolute;
}